<CoursesScreen>
	FloatLayout:
        BoxLayout:
            canvas:
                Color:
                    rgb: (0.6,0.6,0.6)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.99}
            height: 7
            width: 5000
    
        Button:
            text: "Home Page"
            size_hint: 0.2,0.1
            pos_hint: {'x': 0, 'top': 0.97 }
            on_press: app.root.current = "HomeScreen"
            background_color: (1.0, 0.0, 0.0, 1.0)	
        Button:
            id: avail_btn
            text: "Available Courses"
            size_hint: 0.3,0.1
            pos_hint: {'x': 0.4, 'top':0.97 }
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.set_course_avail_state()	
        Button:
            id: times_btn
            text: "Course Times"
            size_hint: 0.2,0.1
            pos_hint: {'x': 0.7, 'top':0.97}
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.set_course_times_state()            
        BoxLayout:
            canvas:
                Color:
                    rgb: (0.6,0.6,0.6)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            height: 7
            width: 5000
                    
        BoxLayout:
            id: crs_srch_box
            height: "40dp"
            width: "1dp"
            size_hint_y: None
            pos_hint: {'x': 0, 'top':0.83}
            orientation: 'horizontal'
            Label:
                id: crs_srch_lbl
                size_hint_x: 8
                text: 'Department:'
