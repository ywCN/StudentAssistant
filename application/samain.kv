<CourseDescriptionScreen>
	BoxLayout:
		id: course_description_screen
		orientation: 'vertical'
		ActionBar:
			ActionView:
				ActionPrevious:
					size_hint_x: None
					width: 0
					app_icon_width: 0.1
					with_previous: False				
				ActionButton:
					text: "Home"
					on_release: app.root.current = 'HomeScreen'
				ActionButton:
					text: "Course Description"
					on_release: app.root.current = "CourseDescriptionScreen"
				ActionButton:
					text: "Buildings"
					on_release: app.root.current = "BuildingsScreen"
				ActionButton:
					text: "Teachers"
					on_release: app.root.current = "TeachersScreen"
		BoxLayout:
			height: "40dp"
			size_hint_y: None
			orientation: 'horizontal'
			TextInput:
				id: course_id
				size_hint_x: 50
				focus: True
				multiline: False
			Button:
				text: "Search"
				size_hint_x: 25
				on_press: root.get_course_description()
		BoxLayout:
			id: course_description_section
			width: self.parent.width
			height: self.parent.height

