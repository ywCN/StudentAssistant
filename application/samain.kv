<CustomPopup>
	size_hint: .7, .7
	background: "BG_Popup.png"
	auto_dismiss: True
	title_align: 'center'
	title_size: '18sp'
	title_color: 128, 0, 0, 8
	separator_color: 0, 0, 0, 0.7

<HomeScreen>
	FloatLayout:
        BoxLayout:
            canvas:
                Color:
                    rgb: (0.6,0.6,0.6)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.99}
            height: 7
            width: 5000
		Button:
			text: "Study Plans"
			size_hint: 0.2,0.1
			pos_hint: {'x': 0, 'top':0.97}
			on_press: app.root.current = "StudyPlanScreen"
			background_color: (1.0, 0.0, 0.0, 1.0)
		Button:
			text: "Courses"
			size_hint: 0.2,0.1
			pos_hint: {'x': 0.26, 'top': 0.97}
			on_press: app.root.current = "CoursesScreen"
			background_color: (1.0, 0.0, 0.0, 1.0)
		Button:
			text: "Professors"
			size_hint: 0.2,0.1
			pos_hint: {'x': 0.52, 'top': 0.97}
			on_press: app.root.current = "ProfessorsScreen"
			background_color: (1.0, 0.0, 0.0, 1.0)
		Button:
			text: "Building"
			size_hint: 0.2,0.1
			pos_hint: {'x': 0.8, 'top': 0.97}
			on_press: app.root.current = "BuildingsScreen"
			background_color: (1.0, 0.0, 0.0, 1.0) 
        
        BoxLayout:
            canvas:
                Color:
                    rgb: (0.6,0.6,0.6)
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'horizontal'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            height: 7
            width: 5000

		Label:
			size_hint_x: None
			text: 'Welcome to Student Assistant Application.'
			color: (0,0,0,1)
			pos_hint: {'center_x': 0.5, 'center_y': 0.75}

		AsyncImage:
			source:'Logo-NJ-stevens.png'
			allow_stretch: True
			keep_ratio: True
			size_hint: None, None
			size: 500,500
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}

