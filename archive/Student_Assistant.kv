<BuildingsScreen>
	FloatLayout:
		Button:
			text: "Home Page"
			size_hint: 0.2,0.1
			pos_hint: {'x': 0.4, 'top':1 }
			on_press: app.root.current = "HomeScreen"
			background_color: (1.0, 0.0, 0.0, 1.0)	
				
		BoxLayout:
			orientation: "vertical"
			AsyncImage:
				source:"CampusMap.png"
